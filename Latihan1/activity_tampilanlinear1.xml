<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tampilanlinear1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:orientation="vertical"
    tools:context=".tampilanlinear1">


    <EditText
        android:id="@+id/edt1NamaPegawai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hijau1"
        android:inputType="text"
        android:hint="@string/edt1hint1"
        android:textSize="12pt"
        android:textColorHint="@color/edt1hintcolor1"
        android:importantForAutofill="no" />


    <Button
        android:id="@+id/tbl1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="@string/tbl1"
        android:textSize="10pt"/>


    <TextView
        android:id="@+id/txv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@color/txv1bgcolor"
        android:text="@string/txv1"
        android:textSize="12pt"
        android:textColorHint="@color/txv1hintcolor1"
        android:gravity="center"/>

</LinearLayout>
